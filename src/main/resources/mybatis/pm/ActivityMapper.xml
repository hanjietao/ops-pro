<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pepper.project.pm.activity.mapper.ActivityPmMapper">

	<resultMap type="ActivityPm" id="ActivityResult">
		<id     property="id"         		column="id"         />
		<id     property="propertyId"         		column="property_id"         />
		<result property="title"         column="title"        />
		<result property="content"         column="content"        />
		<result property="status"           column="status"         />
		<result property="createTime"       column="create_time"            />
		<result property="createBy"     	column="create_by"    />
		<result property="updateTime"       column="update_time"           />
		<result property="updateBy"         column="update_by"                />
		<association property="property"    column="id" javaType="Property" resultMap="PropertyResult" />
	</resultMap>

	<resultMap type="Property" id="PropertyResult">
		<id     property="id"         		column="id"         />
		<result property="propertyCode"         column="property_code"        />
		<result property="propertyName"         column="property_name"        />
		<result property="areaId"       column="area_id"         />
		<result property="status"           column="status"         />
	</resultMap>
	<sql id="selectActivityVo">
       select a.create_time, a.create_by, a.update_time, a.update_by, a.id,a.property_id,a.title,a.content,a.status,
       p.id,p.property_code,p.property_name,p.area_id,p.status
       from pm_activity a
       left join pm_property p on a.property_id = p.id
    </sql>

	<select id="selectActivityById" parameterType="Integer" resultMap="ActivityResult">
		<include refid="selectActivityVo"/>
		where a.id = #{id}
	</select>

 	<select id="selectActivityList" parameterType="ActivityPm" resultMap="ActivityResult">
		<include refid="selectActivityVo"/>
		<where>
			<if test="title != null and title != ''">
				AND a.title like concat('%', #{title}, '%')
			</if>
			<if test="propertyId != null and propertyId != 0">
				AND a.property_id = #{propertyId}
			</if>
			<if test="status != null and status != ''">
				AND a.status = #{status}
			</if>
			<if test="id != null and id != 0">
				AND a.id = #{id}
			</if>
		</where>
	</select>

	<insert id="insertActivity" parameterType="ActivityPm">
		insert into pm_activity (
		<if test="propertyId != null and propertyId != '' ">property_id, </if>
		<if test="title != null and title != '' ">title, </if>
		<if test="content != null and content != '' ">content, </if>
		<if test="status != null and status != '' ">status, </if>
		<if test="createBy != null and createBy != ''">create_by,</if>
		<if test="updateBy != null and updateBy != ''">update_by,</if>
		create_time,
		update_time
		)values(
		<if test="propertyId != null and propertyId != ''">#{propertyId}, </if>
		<if test="title != null and title != ''">#{title}, </if>
		<if test="content != null and content != ''">#{content}, </if>
		<if test="status != null and status != '' ">#{status}, </if>
		<if test="createBy != null and createBy != ''">#{createBy},</if>
		<if test="updateBy != null and updateBy != ''">#{updateBy},</if>
		sysdate(),
		sysdate()
		)
	</insert>

	<update id="updateActivity" parameterType="ActivityPm">
		update pm_activity
		<set>
			<if test="propertyId != null and propertyId != ''">property_id = #{propertyId}, </if>
			<if test="title != null and title != ''">title = #{title}, </if>
			<if test="content != null and content != ''">content = #{content}, </if>
			<if test="status != null">status = #{status}, </if>
			<if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
			update_time = sysdate()
		</set>
		where id = #{id}
	</update>

    <delete id="deleteActivityByIds" parameterType="String">
        delete from pm_activity where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>
