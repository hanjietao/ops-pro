<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pepper.project.csc.area.mapper.AreaMapper">

	<resultMap type="Area" id="AreaResult">
		<id     property="id"         column="id"         />
		<result property="name"         column="name"        />
		<result property="coordinate"          column="coordinate"         />
		<result property="createdTime"            column="created_time"            />
		<result property="createdBy"     column="created_by"    />
		<result property="updatedTime"           column="updated_time"           />
		<result property="updatedBy"                column="updated_by"                />
	</resultMap>

	<sql id="selectAreaVo">
       select created_time, created_by, updated_time, updated_by, id, name, coordinate from csc_area
    </sql>

	<select id="selectAreaById" parameterType="Integer" resultMap="AreaResult">
		<include refid="selectAreaVo"/>
		where id = #{id}
	</select>

 	<select id="selectAreaList" parameterType="Area" resultMap="AreaResult">
		<include refid="selectAreaVo"/>
		<where>
			<if test="name != null and name != ''">
				AND name like concat('%', #{name}, '%')
			</if>
			<if test="id != null and id != 0">
				AND id = #{id}
			</if>
		</where>
	</select>



</mapper>
